.container{
  padding: 40rpx 40rpx 180rpx;
}

.page_title{
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #3C3C3C;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.area{
  padding: 40rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.area .a_title{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.area .flex{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.area .flex:last-of-type{
  margin-bottom: 0;
}

.area .flex .left {
  max-width: 420rpx;
}

.area .flex .left view:first-of-type{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.area .flex .left view + view{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666666;
}

.area .flex .left text{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
}

.area .flex .right text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666666;
}

.area .flex .right text + text{
  margin-left: 20rpx;
}

.area .flex .right .smallFee{
  font-size: 34rpx;
  line-height: 48rpx;
  letter-spacing: 1rpx;
  /* font-weight: bold; */
}

.key_color{
  color: #F97572 !important;
}

.bottom_content{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  background-color: #fff;
  box-shadow:0px -3rpx 14rpx 0px rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.bottom_content .price{
  display: flex;
  align-items: center;
}

.bottom_content .price text:first-of-type{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-right: 20rpx;
}

.bottom_content .price text:last-of-type{
  font-size: 32rpx;
  line-height: 45rpx;
}

.bottom_content .down_order button{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #fff;
  border-radius: 40rpx;
  background-color: #F97572;
}