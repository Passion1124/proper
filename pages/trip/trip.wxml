<!-- trip.wxml -->
<wxs module="dateFr" src='../../utils/filter.wxs'></wxs>
<view class='container'>
  <!-- <view class='page_title'>
    <text>行程</text>
  </view> -->
  <view class='empty' wx:if='{{!trips.length}}'>
    <view class='img_row'>
      <image src='../../img/trip/empty.png'></image>
    </view>
    <view class='text'>
      <text>快去探索你的精彩日本游吧</text>
    </view>
  </view>
  <view class='un_empty' wx:if='{{trips.length}}'>
    <view class='list'>
      <view class='date'>2018-10-01（今天）</view>
      <view class='order'>
        <view class='content'>
          <view class='title'>日本东京+大阪7日自由行爆预热…</view>
          <view class='subTitle'>
            <view class='expiry_date'>有效期至2018-12-12</view>
            <view class='order_detail'>订单详情></view>
          </view>
        </view>
        <view class='content'>
          <view class='title'>日本东京+大阪7日自由行爆预热…</view>
          <view class='subTitle'>
            <view class='expiry_date'>有效期至2018-12-12</view>
            <view class='order_detail'>订单详情></view>
          </view>
        </view>
      </view>
    </view>
    <view class='list'>
      <view class='date'>2018-10-01（今天）</view>
      <view class='order'>
        <view class='content'>
          <view class='title'>日本东京+大阪7日自由行爆预热…</view>
          <view class='subTitle'>
            <view class='expiry_date'>有效期至2018-12-12</view>
            <view class='order_detail'>订单详情></view>
          </view>
        </view>
        <view class='content'>
          <view class='title'>日本东京+大阪7日自由行爆预热…</view>
          <view class='subTitle'>
            <view class='expiry_date'>有效期至2018-12-12</view>
            <view class='order_detail'>订单详情></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='like'>
    <view class='title'>
      <text>猜你喜欢</text>
    </view>
    <view class='recommend' wx:if='{{goods.length}}'>
      <block wx:for='{{goods}}' wx:key='{{index}}'>
        <view class='list'>
          <view class='img_row'>
            <image src='{{item.goodsBase.poster}}'></image>
          </view>
          <view class='info'>
            <view class='star'>
              <block wx:for='{{5}}' wx:key='{{sIndex}}' wx:for-index='sIndex' wx:for-item='sItem'>
                <image wx:if='{{(item.goodsBase ? item.goodsBase.star : 0) >= sItem +  1}}' src='../../img/index/star_check.png'></image>
                <image wx:else src='../../img/index/star_uncheck.png'></image>
              </block>
            </view>
            <view class='num'>
              <text>已售 323</text>
            </view>
          </view>
          <view class='title_warp'>
            <text>{{item.goodsInfo.name}}</text>
          </view>
          <view class='location'>
            <view class='icon'>
              <image src='../../img/index/location.png'></image>
            </view>
            <view class='text'>
              <text>{{item.goodsInfo.city}} · 距离市中心{{dateFr.getDistance(item.distance)}}公里</text>
            </view>
          </view>
          <view class='worth'>
            <view class='price'>
              <text>{{item.goodsInfo ? item.goodsInfo.avgPrice : ''}}</text>
            </view>
            <view class='ticket'>
              <image src='../../img/index/ticket.png'></image>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view class='recommend_empty' wx:if='{{!goods.length}}'>暂无推荐商品</view>
  </view>
</view>