.container{
  padding-bottom: 140rpx;
}

.row {
  padding: 0 40rpx;
}

.area {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.border_0 {
  border: 0;
}

.padding_top_0 {
  padding-top: 0;
}

.padding_bottom_0 {
  padding-bottom: 0;
}

.padding_0 {
  padding: 0;
}

.area .title {
  font-size: 56rpx;
  line-height: 78rpx;
  color: #3c3c3c;
  margin-bottom: 20rpx;
}

.area .goods_item_price{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.area .goods_item_price .present{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #F97572;
  margin-right: 24rpx;
}

.area .goods_item_price .original{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  text-decoration: line-through;
}

.area .goos_item_end{
  font-size: 22rpx;
  line-height: 30rpx;
  color: #666666;
}

.area .area_title {
  margin: 24rpx 0 40rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #484848;
}

.area .introduce .wxParse-p{
  height: auto;
}

.area .introduce .wxParse-p .WxEmojiView {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3c3c3c;
  /* margin-bottom: 40rpx; */
}

.area .introduce .wxParse-p:last-of-type .WxEmojiView {
  margin-bottom: 0;
}

.area .introduce .wxParse-p image {
  max-width: 100% !important;
  vertical-align: top;
  /* margin-bottom: 40rpx; */
}

.area .tips_title{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.area .tips_text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
}

.fixed_tips{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px -3rpx 14rpx 0px rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.fixed_tips .price{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #F97572;
  font-weight: bold;
}

.fixed_tips button{
  width: 300rpx;
  height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #fff;
  border-radius: 40rpx;
  background-color: #F97572;
}