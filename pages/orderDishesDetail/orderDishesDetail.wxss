.container {
  padding: 0 40rpx;
}

.top {
  width: 100%;
  padding: 47rpx 0 58rpx;
  margin: 57rpx 0 16rpx;
  background-color: #f2f5f7;
  border-radius: 16rpx;
  text-align: center;
}

.top .text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3c3c3c;
}

.top .btn {
  margin: 48rpx 0 7rpx;
}

.top .btn button {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #fff;
  box-shadow: 0px 10rpx 22rpx 0px rgba(164, 178, 190, 0.39);
  border-radius: 50rpx;
  background-color: #F97572;
}

.ordered_menu {
  padding: 80rpx 0 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.ordered_menu .title {
  font-size: 48rpx;
  line-height: 67rpx;
  color: #3c3c3c;
  text-align: center;
  margin-bottom: 57rpx;
  font-weight: bold;
}

.ordered_menu .flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.ordered_menu .flex:last-of-type {
  margin-bottom: 0;
}

.ordered_menu .flex view:first-of-type {
  font-size: 34rpx;
  line-height: 48rpx;
  color: #3c3c3c;
}

.ordered_menu .flex view:last-of-type {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.ordered_menu .menu_time, .ordered_menu .menu_number {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3c3c3c;
}

.ordered_menu .menu_time {
  margin-bottom: 24rpx;
}

.order_number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 40rpx;
}

.order_number .number {
  font-size: 38rpx;
  color: #3c3c3c;
  font-weight: 600;
}

.order_number .time {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.area {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.order_number + .area {
  padding-top: 24rpx;
}

.area .a_title {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.area .flex {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.area .flex:last-of-type {
  margin-bottom: 0;
}

.area .flex .left {
  max-width: 420rpx;
}

.area .flex .left view:first-of-type {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3c3c3c;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.area .flex .left view + view {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.area .flex .left text {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3c3c3c;
}

.area .flex .right text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.area .flex .right text + text {
  margin-left: 20rpx;
}

.area .flex .right .smallFee {
  font-size: 34rpx;
  line-height: 48rpx;
  letter-spacing: 1rpx;
  /* font-weight: bold; */
}

.key_color {
  color: #f97572 !important;
}
