.page_title {
  padding: 60rpx 0 0 32rpx;
  font-size: 64rpx;
  line-height: 72rpx;
  color: #3c3c3c;
  letter-spacing: 6rpx;
  font-weight: bold;
}

.empty {
  text-align: center;
  margin-bottom: 80rpx;
}

.empty .img_row {
  width: 614rpx;
  height: 304rpx;
  margin: 17rpx auto 23rpx;
}

.empty .img_row image {
  width: 100%;
  height: 100%;
}

.empty .text {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #8c8c8c;
  letter-spacing: 3rpx;
}

.like .title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8c8c8c;
  text-align: center;
  margin-bottom: 40rpx;
}

.like .title text {
  position: relative;
}

.like .title>text::before, .like .title>text::after {
  position: absolute;
  top: 50%;
  content: "";
  width: 80rpx;
  height: 2rpx;
  border-radius: 1rpx;
  transform: translateY(-50%);
}

.like .title text::before {
  left: 120%;
  background: linear-gradient(90deg, rgba(42, 197, 206, 1) 0%, rgba(84, 228, 233, 0) 100%);
}

.like .title text::after {
  right: 120%;
  background: linear-gradient(90deg, rgba(84, 228, 233, 0) 0%, rgba(42, 197, 206, 1) 100%);
}

.like .recommend {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.like .recommend .list {
  width: 324rpx;
  margin-bottom: 40rpx;
}

.like .recommend .list>.img_row {
  position: relative;
  width: 100%;
  height: 324rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.like .recommend .list .img_row .bg {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.like .recommend .list .img_row .icon{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.like .recommend .list .img_row .icon .icon_left{
  display: flex;
  align-items: center;
}

.like .recommend .list .img_row .icon .icon_left image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: top;
}

.like .recommend .list .img_row .icon .icon_left image.top{
  width: 56rpx;
}

.like .recommend .list .img_row .icon .icon_left image + image{
  margin-left: 8rpx;
}

.like .recommend .list .img_row .icon .icon_right{
  display: flex;
}

.like .recommend .list .img_row .icon .icon_right .ticket{
  width: 38rpx;
  height: 28rpx;
  vertical-align: top;
}

.like .recommend .list .title {
  height: 84rpx;
  font-size: 32rpx;
  line-height: 42rpx;
  color: #3c3c3c;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
  text-align: left;
}

.like .recommend .list .location {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.like .recommend .list .location .img_row {
  width: 16rpx;
  height: 16rpx;
  margin-right: 13rpx;
}

.like .recommend .list .location .img_row image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.like .recommend .list .location .text {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #8c8c8c;
}

.like .recommend .list .info {
  display: flex;
  align-items: center;
}

.like .recommend .list .info .price {
  max-width: 200rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #d9333f;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.like .recommend .list .info .price .ashy{
  color: #999;
}

.like .recommend .list .info .price text text {
  font-size: 20rpx;
}

.like .recommend .list .info .star {
  flex: 1;
  height: 14rpx;
  text-align: right;
}

.like .recommend .list .info .star image {
  width: 14rpx;
  height: 14rpx;
  margin-right: 5rpx;
  vertical-align: top;
}

.like .recommend .list .info .star image:last-of-type {
  margin-right: 0;
}

.recommend_empty {
  font-size: 32rpx;
  line-height: 48rpx;
  text-align: center;
  color: #8c8c8c;
}
