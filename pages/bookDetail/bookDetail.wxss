.container{
  padding: 0 40rpx;
}

.container .row{
  width: 100%;
  padding: 40rpx;
  background-color: #23C2F7;
  border-radius: 15rpx;
  margin-top: 74rpx;
  color: #fff;
  box-sizing: border-box;
}

.container .gary{
  background-color: #C2C2C2;
}

.container .row .status{
  font-size: 22rpx;
  line-height: 30rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  line-height: 67rpx;
  text-align: center;
  margin-bottom: 64rpx;
}

.order_info .date_title{
  font-size: 24rpx;
  line-height: 33rpx;
  margin-bottom: 4rpx;
}

.order_info .order_date{
  font-size: 48rpx;
  line-height: 58rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.order_info .other{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order_info .other>view{
  display: flex;
  align-items: center;
}

.order_info .other>view .text{
  font-size: 28rpx;
  line-height: 40rpx;
}

.order_info .other>view .icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.order_info .other>view .icon image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.line{
  width: 100%;
  height: 1rpx;
  border-bottom: 1rpx dashed #fff;
  box-sizing: border-box;
  margin: 60rpx 0;
}

.contact_info .name{
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 16rpx;
}

.contact_info .phone, .contact_info .mail{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 16rpx;
}

.contact_info .mail{
  margin-bottom: 56rpx;
}

.order_explain{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.order_explain view{
  font-size: 24rpx;
  line-height: 33rpx;
  padding: 9rpx 28rpx;
  border: 1rpx solid #fff;
  border-radius: 8rpx;
  margin: 0 24rpx 24rpx 0;
}

.btn_row{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn_row button{
  width: 280rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 56rpx;
  background-color: rgba(255, 255, 255, .4);
  margin: 0;
  padding: 0;
  margin-top: 40rpx;
}



