.container{
  padding: 0 40rpx;
}

.tips{
  padding: 40rpx;
  border-radius: 16rpx;
  background-color: #F2F5F7;
  margin: 40rpx 0;
  text-align: center;
}

.tips button{
  width: 480rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  box-sizing: border-box;
}

.tips .comment_row{
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tips .comment_row button{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #3C3C3C;
  letter-spacing: 2rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 50rpx;
  background-color: transparent;
}

.tips .title{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #3C3C3C;
}

.finished .shopping, .pending .cancel_order {
  line-height: 78rpx;
  background-color: transparent;
  color: #3C3C3C;
  border: 1rpx solid #B7B7B7;
}

.overtime .shopping, .refund .shopping, .pending .pay{
  line-height: 80rpx;
  border: 0;
  color: #fff;
  background-color: #F97572;
  box-shadow:0px 10rpx 22rpx 0px rgba(164,178,190,0.39);
}

.refund .title{
  color: #F97572;
}

.refund .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  margin-top: 8rpx;
  color: #3C3C3C;
} 

.pending .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #3C3C3C;
  margin-top: 8rpx;
}

.pending .subTitle text{
  color: #23C2F7;
}

.confirm{
  width: 100%;
  padding: 60rpx 0 49rpx;
  background:linear-gradient(270deg,rgba(36,225,226,1) 0%,rgba(35,194,247,1) 100%);
  box-shadow:0px 16rpx 40rpx 0px rgba(205,246,249,1);
  border-radius: 16rpx;
  margin: 80rpx 0;
}

.confirm .ticket-offline .ticket-offline-name{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
}

.confirm .ticket-offline .ticket-offline_expire {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #fff;
  text-align: center;
  margin: 8rpx 0 40rpx;
}

.confirm .ticket-offline .ticket-offline_btn button {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #23C2F7;
  letter-spacing: 3rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  background-color: #fff;
}


.row{
  width: 100%;
  padding: 40rpx 0;
  border-top: 1rpx solid #e0e0e0;
}

.row .title{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3C3C3C;
  margin-bottom: 40rpx;
}

.row .commodity_other_info{
  margin-top: 26rpx;
}

.row .commodity .poster{
  width: 172rpx;
  min-width: 172rpx;
  height: 172rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.row .commodity .poster image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.row .commodity .info{
  flex: 1;
  max-width: 480rpx;
}

.row .commodity .info .c_title{
  width: 100%;
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3C3C3C;
  margin-bottom: 32rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.row .commodity .info .c_subInfo, .row .commodity .info .c_date{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
}

.row .commodity .info .c_subInfo{
  margin-bottom: 16rpx;
}

.row .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.row .text:last-of-type{
  margin-bottom: 0;
}

.row .flex{
  display: flex;
  align-items: center;
}

.row .text.flex>view{
  flex: 1;
}

.row .flex .orange{
  color: #F97572;
  text-align: right;
}

.row .other .refund{
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
}

.row .other .shopping {
  flex: 1;
}

.row .other .shopping button{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #3C3C3C;
  letter-spacing: 2rpx;
  border: 1rpx solid #B7B7B7;
  border-radius: 50rpx;
  padding: 0;
  background-color: #fff;
  margin: 0 0 0 auto;
  box-sizing: border-box;
}