.container{
  padding: 0 40rpx;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  display: flex;
  padding: 20rpx 40rpx;
  background-color: #fff;
  justify-content: space-between;
  box-sizing: border-box;
  z-index: 9;
}

.header view{
  width: 149rpx;
  height: 48rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  border-radius: 32rpx;
  text-align: center;
  color: #8C8C8C;
  border: 1rpx solid #B7B7B7;
  box-sizing: border-box;
}

.header view.active{
  border-color: #23C2F7;
  color: #23C2F7;
}

.list_row{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  margin: 88rpx 0 40rpx;
}

.list_row>view{
  width: 324rpx;
  margin-bottom: 40rpx;
}

.list_row>view>.img_row{
  position: relative;
  width: 100%;
  height: 324rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.list_row>view>.img_row .bg{
  width: 100%;
  height: 100%;
}

.list_row>view>.img_row .top{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  width: 56rpx;
  height: 28rpx;
}

.list_row>view>.img_row .ticket{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 38rpx;
  height: 28rpx;
}

.list_row>view .title{
  height: 84rpx;
  font-size: 32rpx;
  line-height: 42rpx;
  color: #3C3C3C;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.list_row>view .location{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.list_row>view .location .img_row{
  width: 16rpx;
  height: 16rpx;
  margin-right: 13rpx;
}

.list_row>view .location .img_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.list_row>view .location .text{
  font-size: 20rpx;
  line-height: 28rpx;
  color: #8C8C8C;
}

.list_row>view .info{
  display: flex;
  align-items: center;
}

.list_row>view .info .price{
  max-width: 200rpx;
  font-size: 32rpx;
  line-height: 28rpx;
  color: #D9333F;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.list_row>view .info .price text text{
  font-size: 20rpx;
}

.list_row>view .info .star{
  flex: 1;
  height: 14rpx;
  text-align: right;
}

.list_row>view .info .star image{
  width: 14rpx;
  height: 14rpx;
  margin-right: 5rpx;
  vertical-align: top;
}

.list_row>view .info .star image:last-of-type{
  margin-right: 0;
}