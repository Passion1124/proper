.container {
  padding: 0 40rpx;
}

.container .meal {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.container .meal:last-of-type{
  border-bottom: 0;
}

.container .meal .poster {
  width: 112rpx;
  height: 112rpx;
  background: #d8d8d8;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.container .meal .info{
  flex: 1;
}

.container .meal .info .name {
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3c3c3c;
  margin-bottom: 16rpx;
}

.container .meal .info .price {
  display: flex;
  align-items: center;
}

.container .meal .info .price view {
  font-size: 24rpx;
  line-height: 33rpx;
}

.container .meal .info .price .present {
  color: #f97572;
  margin-right: 8rpx;
}

.container .meal .info .price .original {
  color: #666;
  text-decoration: line-through;
}

.container .meal .buy button {
  width: 154rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 22rpx;
  color: #fff;
  background: #f97572;
  border-radius: 31rpx;
}
