.container{
  padding-bottom: 100rpx;
}

.banner {
  width: 100%;
  height: 655rpx;
  box-sizing: border-box;
}

.banner image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.collect {
  position: absolute;
  top: 44rpx;
  right: 32rpx;
  width: 40rpx;
  height: 40rpx;
}

.collect image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.row {
  padding: 0 40rpx;
}

.area {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.border_0 {
  border: 0;
}

.padding_top_0 {
  padding-top: 0;
}

.padding_0 {
  padding: 0;
}

.area .title {
  font-size: 56rpx;
  line-height: 78rpx;
  color: #3c3c3c;
  margin-bottom: 20rpx;
}

.area .goods_item_price{
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.area .goods_item_price .present{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #F97572;
  margin-right: 24rpx;
}

.area .goods_item_price .original{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  text-decoration: line-through;
}

.area .goos_item_end{
  font-size: 22rpx;
  line-height: 30rpx;
  color: #666666;
}

.area .goodsInfo{
  display: flex;
  align-items: center;
}

.area .goodsInfo .poster{
  width: 94rpx;
  height: 94rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.area .goodsInfo .poster image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.area .goodsInfo .info .name{
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3C3C3C;
  margin-bottom: 16rpx;
}

.area .goodsInfo .info .location{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
}

.area .area_title {
  margin: 24rpx 0 40rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #484848;
}

.area .introduce .wxParse-p .WxEmojiView {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3c3c3c;
  margin-bottom: 40rpx;
}

.area .introduce .wxParse-p:last-of-type .WxEmojiView {
  margin-bottom: 0;
}

.area .introduce .wxParse-p image {
  max-width: 100% !important;
  vertical-align: top;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.area .explain>view {
  margin-bottom: 24rpx;
  color: #3c3c3c;
}

.area .explain>view view:first-of-type {
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.area .explain>view view:last-of-type {
  font-size: 24rpx;
  line-height: 40rpx;
}

.main_row .main {
  position: relative;
  width: 684rpx;
  height: 238rpx;
  margin: 25rpx auto 0;
}

.main_row .main:last-of-type {
  margin-bottom: 0;
}

.main_row .main .bg {
  width: 100%;
  height: 100%;
}

.main_row .main .content {
  position: absolute;
  left: 7rpx;
  top: 7rpx;
  width: 670rpx;
  height: 224rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.main_row .main .content .top {
  display: flex;
  justify-content: space-between;
}

.main_row .main .content .top .logo {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  overflow: hidden;
}

.main_row .main .content .top .logo image {
  width: 100%;
  height: 100%;
}

.main_row .main .content .top .worth {
  text-align: right;
}

.main_row .main .content .top .worth .discount {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  color: #3c3c3c;
}

.main_row .main .content .top .worth .discount .num {
  font-size: 62rpx;
  line-height: 59rpx;
  font-weight: normal;
  margin-right: 10rpx;
}

.main_row .main .content .top .worth .discount .num .currency {
  font-size: 24rpx;
  line-height: 33rpx;
}

.main_row .main .content .top .worth .discount .fracture {
  position: relative;
  font-size: 24rpx;
  top: -4rpx;
}

.main_row .main .content .top .worth .expiry_date {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #3c3c3c;
}

.main_row .main .content .bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 51rpx;
}

.main_row .main .content .bottom view:first-of-type {
  max-width: 377rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.main_row .main .content .bottom view:last-of-type {
  font-size: 0;
}

.main_row .main .content .bottom view:last-of-type button {
  width: 154rpx;
  height: 48rpx;
  line-height: 46rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  border: 1rpx solid #23c2f7;
  background-color: #fff;
  color: #23c2f7;
  border-radius: 48rpx;
  padding: 0;
}

.main_row .main .content .bottom view:last-of-type .hasExists {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8c8c8c;
}

.shopping_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 121rpx;
  border-top: 1rpx solid #E0E0E0;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 99;
}

.shopping_btn button{
  width: 670rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  border-radius: 40rpx;
  background-color: #F97572;
  margin: 20rpx auto 0;
}