/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page{
  height: 100%;
}

.container{
  position: relative;
  /* display: flex; */
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.top_info{
  padding: 28rpx 35rpx 40rpx;
}

.top_info .goods{
  width: 100%;
}

.top_info .goods .goods_main{
  display: flex;
}

.top_info .goods .goods_main .poster{
  min-width: 150rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.top_info .goods .goods_main .poster image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.top_info .goods .goods_main .goods_info{
  flex: 1;
  max-width: 485rpx;
}

.top_info .goods .goods_main .goods_info .goods_title{
  font-size: 36rpx;
  line-height: 42rpx;
  color: #3C3C3C;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  margin-bottom: 24rpx;
}

.top_info .goods .goods_main .goods_info .goods_star{
  line-height: 0;
  margin-bottom: 10rpx;
}

.top_info .goods .goods_main .goods_info .goods_star image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 6rpx;
  vertical-align: top;
}

.top_info .goods .goods_main .goods_info .goods_tips{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
}

.top_info .goods .goods_main .goods_info .goods_tips .tips{
  color: #F97572;
}

.top_info .goods .goods_other{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top_info .goods .goods_other .tags view{
  font-size: 24rpx;
  line-height: 30rpx;
  padding: 5rpx 12rpx;
  color: #23C2F7;
  background-color: #E0F7FF;
  border-radius: 4rpx;
}

.top_info .goods .goods_other .tags view + view{
  margin-left: 16rpx;
}

.top_info .goods .goods_other .detail{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.top_info .eat_info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  padding: 0 35rpx;
  margin-top: 45rpx;
  border-radius: 50rpx;
  background-color: #F8F8F8;
  box-sizing: border-box;
}

.top_info .eat_info .table_number, .top_info .eat_info .eat_number{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top_info .eat_info .eat_number picker{
  width: 100%;
}

.top_info .eat_info .eat_number .picker{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top_info .eat_info .table_number .left, .top_info .eat_info .eat_number .left{
  display: flex;
  align-items: center;
}

.top_info .eat_info .table_number .left .icon_row, .top_info .eat_info .eat_number .left .icon_row{
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.top_info .eat_info .table_number .left .icon_row image, .top_info .eat_info .eat_number .left .icon_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.top_info .eat_info .table_number .left .text, .top_info .eat_info .eat_number .left .text{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  letter-spacing: 1rpx;
}

.top_info .eat_info .table_number .fullName, .top_info .eat_info .eat_number .fullName{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.top_info .eat_info .divider{
  width: 2rpx;
  height: 45rpx;
  margin: 0 25rpx;
  background-color: #D3D3D3;
}

.food_row{
  display:flex;
  box-sizing: border-box;
}

.category{
  width: 182rpx;
  padding: 0 35rpx;
  box-sizing: border-box;
  margin-right: 24rpx;
  overflow-y: auto;
}

.category view{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666666;
  margin-bottom: 56rpx;
}

.category view.active{
  color: #3C3C3C;
  font-weight: bold;
}

.food_list{
  flex: 1;
  padding-right: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.food_list .food{
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  /* justify-content: space-between; */
}

.food_list .food .poster {
  min-width: 172rpx;
  height: 172rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.food_list .food .poster image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.food_list .food .info{
  width: 330rpx;
  overflow: hidden;
}

.food_list .food .info .name{
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3C3C3C;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.food_list .food .info .price_num{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.food_list .food .info .price_num .price{
  width: 150rpx;
  font-size: 22rpx;
  line-height: 33rpx;
  letter-spacing: 1rpx;
  color: #F97572;
}

.food_list .food .info .price_num .price text{
  width: 100%;
  word-wrap: break-word;
}

.food_list .food .info .price_num .num{
  display: flex;
  align-items: center;
}

.food_list .food .info .price_num .num .minus, .food_list .food .info .price_num .num .plus{
  width: 44rpx;
  height: 44rpx;
  font-size: 38rpx;
  line-height: 42rpx;
  text-align: center;
  color: #23C2F7;
  border: 1rpx solid #23C2F7;
  border-radius: 50%;
  box-sizing: border-box;
}

.food_list .food .info .price_num .num .number_inp{
  width: 64rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3C3C3C;
  text-align: center;
}

.food_list .food .info .price_num .num .plus{
  background-color: #23C2F7;
  color: #fff;
}

.bottom_content{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  background:rgba(255,255,255,1);
  border-top:1rpx solid rgba(224,224,224,1);
  box-sizing: border-box;
}

.bottom_content .num_price{
  display: flex;
  align-items: center;
}

.bottom_content .num_price .num {
  width: 92rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  letter-spacing: 3rpx;
  color: #23C2F7;
  background-color: rgba(35, 194, 247, 0.1);
  border-radius: 8rpx;
  font-weight: bold;
  text-align: center;
  margin-right: 16rpx;
}

.bottom_content .num_price .price {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #F97572;
  font-weight: bold;
}

.bottom_content .down_order button{
  width: 267rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  color: #fff;
  background-color: #F97572;
  border-radius: 40rpx;
}