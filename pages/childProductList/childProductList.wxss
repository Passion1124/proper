.container{
  padding: 40rpx;
}

.product>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  /* height: 264rpx; */
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  background-color: #f2f5f7;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.product>view:last-of-type {
  margin-bottom: 0;
}

.product>view .p_main {
  width: 452rpx;
}

.product>view .p_main .title {
  width: 100%;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #484848;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product>view .buy button {
  width: 128rpx;
  height: 48rpx;
  line-height: 46rpx;
  color: #fff;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  border-radius: 31rpx;
  background-color: #f97572;
  padding: 0;
}

.product>view .p_main>view:nth-of-type(2) {
  width: 100%;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.product>view .p_main>view:nth-of-type(3) {
  display: flex;
  align-items: center;
}

.product>view .p_main>view:nth-of-type(3) .price {
  display: flex;
  align-items: center;
}

.product>view .p_main>view:nth-of-type(3) .price .present {
  font-size: 32rpx;
  line-height: 45rpx;
  color: #f97572;
  margin-right: 24rpx;
}

.product>view .p_main>view:nth-of-type(3) .price .original {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8c8c8c;
  text-decoration: line-through;
}

.product>view .p_main>view:nth-of-type(3) .ticket {
  width: 38rpx;
  height: 29rpx;
  margin-left: 30rpx;
}

.product>view .p_main>view:nth-of-type(3) .ticket image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}