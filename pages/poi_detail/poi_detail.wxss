.banner{
  width: 100%;
  height: 655rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.banner swiper{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.banner swiper image{
  width: 100%;
  height: 100%;
}

.collect{
  position: absolute;
  top: 44rpx;
  right: 32rpx;
  width: 40rpx;
  height: 40rpx;
}

.collect image{
  width: 100%;
  height: 100%;
}

.row{
  padding: 0 40rpx;
}

.area{
  padding: 40rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
  box-sizing: border-box;
}

.border_0{
  border: 0;
}

.padding_top_0{
  padding-top: 0;
}

.area .title{
  font-size: 64rpx;
  line-height: 72rpx;
  color: #3C3C3C;
  margin-bottom: 40rpx;
}

.area .star{
  display: flex;
  align-items: center;
  margin-bottom: 33rpx;
}

.area .star image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 6rpx;
}

.area .tags{
  display: flex;
  align-items: center;
}

.area .tags view{
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 5rpx 12rpx;
  color: #23C2F7;
  border-radius: 4rpx;
  background-color: #E0F7FF;
  margin-right: 16rpx;
}

.area .tags view:last-of-type{
  margin-right: 0;
}

.area .label{
  font-size: 29rpx;
  line-height: 41rpx;
  color: #3C3C3C;
}

.area .area_title{
  margin: 24rpx 0 40rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #484848;
}

.area .product>view{
  width: 100%;
  /* height: 264rpx; */
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  background-color: #F2F5F7;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.area .product>view:last-of-type{
  margin-bottom: 0;
}

.area .product>view>view:first-of-type{
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.area .product>view>view:first-of-type .title{
  flex: 1;
  margin-right: 28rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #484848;
  margin-bottom: 0;
}

.area .product>view>view:first-of-type .buy button{
  width: 154rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #fff;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  border-radius: 31rpx;
  background-color: #F97572;
  padding: 0;
}

.area .product>view>view:nth-of-type(2){
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.area .product>view>view:nth-of-type(3){
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.area .product>view>view:nth-of-type(3) .price{
  display: flex;
  align-items: center;
}

.area .product>view>view:nth-of-type(3) .price .present{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #F97572;
  margin-right: 24rpx;
}

.area .product>view>view:nth-of-type(3) .price .original{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
  text-decoration:line-through;
}

.area .product>view>view:nth-of-type(3)>view:last-of-type{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
}

.area .comment .user_info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.area .comment .user_info .user{
  display: flex;
  align-items: center;
}

.area .comment .user_info .user .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  overflow: hidden;
}

.area .comment .user_info .user .avatar image{
  width: 100%;
  height: 100%;
}

.area .comment .user_info .user .name_date .name{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  margin-bottom: 8rpx;
}

.area .comment .user_info .user .name_date .date{
  font-size: 20rpx;
  line-height: 28rpx;
  color: #3C3C3C;
}

.area .comment .user_info .star{
  /* padding-top: 11rpx; */
  margin-bottom: 0;
}

.area .comment .user_info .star image{
  width: 16rpx;
  height: 16rpx;
  margin-right: 4rpx;
  vertical-align: top;
}

.area .comment .user_info .star image:last-of-type{
  margin-right: 0;
}

.area .comment .main{
  margin-bottom: 40rpx;
}

.area .comment .main .text{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.area .comment .main .img_row{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.area .comment .main .img_row image{
  width: 212rpx;
  height: 212rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.area .see{
  font-size: 28rpx;
  line-height: 32rpx;
  color: #23C2F7;
}

.area .comment_empty{
  font-size: 28rpx;
  line-height: 32rpx;
  color: #3C3C3C;
  text-align: center;
}

.area .introduce .wxParse-p{
  
}

.area .introduce .wxParse-p:last-of-type{
  margin-bottom: 0;
}

.area .introduce .wxParse-p .WxEmojiView{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-bottom: 40rpx;
}

.area .introduce .wxParse-p image{
  /* width: 100% !important;
  height: 400rpx !important; */
  max-width: 100% !important;
  vertical-align: top;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.area .explain>view{
  margin-bottom: 24rpx;
  color: #3C3C3C;
}

.area .explain>view view:first-of-type{
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.area .explain>view view:last-of-type{
  font-size: 24rpx;
  line-height: 40rpx;
}

.shops>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.shops>view:last-of-type{
  margin-bottom: 0;
}

.shops>view.business_hours{
  align-items: flex-start;
}

.shops>view .text{
  flex: 1;
}

.shops>view .text .date{
  font-size: 29rpx;
  line-height: 41rpx;
  color: #3C3C3C;
}

.shops>view .text .tips{
  font-size: 26rpx;
  line-height: 37rpx;
  color: #8C8C8C;
  margin-top: 16rpx;
}

.shops>view .tel_icon{
  width: 32rpx;
  height: 32rpx;
}

.shops>view .tel_icon image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.shops .map{
  border-radius: 16rpx;
  overflow: hidden;
}

