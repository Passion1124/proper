.container {
  padding: 80rpx 40rpx;
}

.confirm {
  width: 100%;
  padding: 60rpx 0 49rpx;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 16rpx 40rpx 0px rgba(205, 246, 249, 1);
  border-radius: 16rpx;
  margin: 80rpx 0;
  color: #fff;
  box-sizing: border-box;
}

.ticket-num {
  width: 100%;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 16rpx 40rpx 0px rgba(205, 246, 249, 1);
  border-radius: 16rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.ticket-num .ticket-num_tt {
  font-size: 56rpx;
  line-height: 78rpx;
  letter-spacing: 1rpx;
  margin-bottom: 24rpx;
}

.ticket-num .ticket-num_ft {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ticket-num .ticket-num_ft .ticket-num_name {
  max-width: 340rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ticket-num .ticket-num_ft .ticket-num_expire {
  font-size: 24rpx;
  line-height: 33rpx;
}

.ticket-qr, .ticket-offline {
  width: 100%;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 16rpx 40rpx 0px rgba(205, 246, 249, 1);
  border-radius: 16rpx;
  color: #fff;
  padding: 60rpx 0 49rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.ticket-qr .ticket-qr_icon {
  width: 344rpx;
  height: 344rpx;
  margin: 0 auto 40rpx;
}

.ticket-qr .ticket-qr_icon image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.ticket-qr .ticket-qr_name {
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
  margin-bottom: 8rpx;
}

.ticket-qr .ticket-qr_expire {
  font-size: 24rpx;
  line-height: 33rpx;
  text-align: center;
}

.ticket-offline .ticket-offline-name {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ticket-offline .ticket-offline_expire {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #fff;
  text-align: center;
  margin: 8rpx 0 40rpx;
}

.ticket-offline .ticket-offline_btn button {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #23c2f7;
  letter-spacing: 3rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  background-color: #fff;
}

.ticket-nums {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 162rpx;
  padding: 0 40rpx;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 16rpx 40rpx 0px rgba(205, 246, 249, 1);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin: 80rpx 0;
}

.ticket-nums .text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #fff;
  letter-spacing: 1rpx;
}

.ticket-nums .arrow {
  width: 36rpx;
  height: 36rpx;
}

.ticket-nums .arrow image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}
