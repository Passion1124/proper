page{
  height: 100%;
}

.container{
  padding: 40rpx 40rpx 120rpx;
}

.fangti{
  padding-top: 80rpx;
}

.blue_tips{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: #23C2F7;
  background-color: rgba(35, 194, 247, 0.1);
  z-index: 9;
}

.foodNum{
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #E0E0E0;
}

.foodNum .text{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3C3C3C;
  letter-spacing: 1rpx;
}

.foodNum .num {
  display: flex;
  align-items: center;
}

.foodNum .num .minus, .foodNum  .num .plus {
  width: 44rpx;
  height: 44rpx;
  font-size: 38rpx;
  line-height: 42rpx;
  text-align: center;
  color: #23c2f7;
  border: 1rpx solid #23c2f7;
  border-radius: 50%;
  box-sizing: border-box;
}

.foodNum .num .number_inp {
  margin: 0 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  letter-spacing: 1rpx;
  color: #3c3c3c;
  text-align: center;
}

.foodNum .num .plus {
  background-color: #23c2f7;
  color: #fff;
}

.group{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.group .title{
  margin-bottom: 30rpx;
}

.group .title text:first-of-type{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-right: 15rpx;
}

.group .title text:last-of-type{
  font-size: 22rpx;
  line-height: 40rpx;
  color: #8C8C8C;
}

.group .food_row .food{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.group .food_row .food:last-of-type{
  margin-bottom: 0;
}

.group .food_row .food .poster{
  width: 112rpx;
  height: 112rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.group .food_row .food .poster image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.group .food_row .food .food_info{
  flex: 1;
  max-width: 300rpx;
}

.group .food_row .food .food_info .title{
  font-size: 36rpx;
  line-height: 50rpx;
  letter-spacing: 1rpx;
  color: #3C3C3C;
  margin-bottom: 22rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.group .food_row .food .food_info .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.group .food_row .food .food_num{
  flex: 1;
}

.group .food_row .food .food_num .def{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #23C2F7;
  text-align: right;
}

.sure{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  border:1rpx solid rgba(224,224,224,1);
}

.sure button {
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  margin-top: 20rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  background-color: #23C2F7;
}