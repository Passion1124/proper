.container{
  padding: 0 40rpx;
}

.container>view.title{
  font-size: 56rpx;
  line-height: 78rpx;
  color: #3C3C3C;
  font-weight: bold;
  margin: 46rpx 0;
}

.tab-h{
  display: flex;
  line-height: 0;
}

.tab-h .tab-item{
  display: inline-block;
  vertical-align: top;
  position: relative;
  padding: 20rpx 0;
  margin-right: 60rpx;
}

.tab-h .tab-item .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8C8C8C;
}

.tab-h .active .text{
  color: #3C3C3C;
}

.tab-h .tab-item image{
  display: none;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 40rpx;
  height: 2rpx;
}

.tab-h .active image{
  display: block;
}

.scoll-h{
  width: 100%;
  height: 100%;
  padding-top: 24rpx;
  box-sizing: border-box;
}

.tab-content .header{
  display: flex;
  justify-content: space-between;
}

.tab-content .header view{
  width: 149rpx;
  height: 48rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  border-radius: 32rpx;
  text-align: center;
  color: #8C8C8C;
  border: 1rpx solid #B7B7B7;
  box-sizing: border-box;
}

.tab-content .header view.active{
  border-color: #23C2F7;
  color: #23C2F7;
}

.tab-content .list_row{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 40rpx;
}

.tab-content .list_row>view{
  width: 324rpx;
  margin-top: 40rpx;
}

.tab-content .list_row>view>.img_row{
  position: relative;
  width: 100%;
  height: 324rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.tab-content .list_row>view>.img_row .bg{
  width: 100%;
  height: 100%;
}

.tab-content .list_row>view>.img_row .top{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  width: 56rpx;
  height: 28rpx;
}

.tab-content .list_row>view>.img_row .ticket{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 38rpx;
  height: 28rpx;
}

.tab-content .list_row>view .title{
  font-size: 32rpx;
  line-height: 42rpx;
  color: #3C3C3C;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.tab-content .list_row>view .location{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tab-content .list_row>view .location .img_row{
  width: 16rpx;
  height: 16rpx;
  margin-right: 13rpx;
}

.tab-content .list_row>view .location .img_row image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.tab-content .list_row>view .location .text{
  font-size: 20rpx;
  line-height: 28rpx;
  color: #8C8C8C;
}

.tab-content .list_row>view .info{
  display: flex;
  align-items: center;
}

.tab-content .list_row>view .info .price{
  font-size: 32rpx;
  line-height: 28rpx;
  color: #D9333F;
}

.tab-content .list_row>view .info .price text text{
  font-size: 20rpx;
}

.tab-content .list_row>view .info .star{
  flex: 1;
  height: 14rpx;
  text-align: right;
}

.tab-content .list_row>view .info .star image{
  width: 14rpx;
  height: 14rpx;
  margin-right: 5rpx;
  vertical-align: top;
}

.tab-content .list_row>view .info .star image:last-of-type{
  margin-right: 0;
}