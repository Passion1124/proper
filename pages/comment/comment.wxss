image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.container{
  padding: 0 40rpx;
  box-sizing: border-box;
}

.star{
  margin-top: 16rpx;
}

.star .title{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  margin-bottom: 25rpx;
  text-align: center;
}

.star .stra_row{
  display: flex;
  align-items: center;
  justify-content: center;
}

.star .stra_row .icon{
  width: 70rpx;
  height: 70rpx;
  margin-left: 25rpx;
}

.star .stra_row .icon:first-of-type{
  margin-left: 0;
}

.comment_text, .upload{
  padding: 40rpx 0;
  border-top: 1rpx solid #e0e0e0;
}

.comment_text{
  margin-top: 64rpx;
}

.comment_text textarea{
  width: 100%;
  height: 294rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3a3a3a;
}

.ph_class{
  color: #B7B7B7;
}

.upload .title{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.upload .file_row{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.upload .file{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 10rpx 10rpx 0;
}

.btn button {
  width: 560rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 8rpx 24rpx 0px rgba(181, 239, 242, 1);
  border-radius: 56rpx;
  margin: 40rpx auto;
}