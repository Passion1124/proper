image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.header .text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #b7b7b7;
}

.header .active {
  color: #23c2f7;
  /* font-weight: bold; */
}

.header .arrow {
  width: 40rpx;
  height: 9rpx;
  margin: 0 47rpx;
}

.queue{
  width: 670rpx;
  padding: 40rpx;
  color: #fff;
  background-color: #09D5CC; 
  border-radius: 10rpx;
  margin: 40rpx auto;
  box-sizing: border-box;
}

.queue.gray_bgc{
  background-color: #C2C2C2;
}

.queue .status{
  font-size: 22rpx;
  line-height: 28rpx;
  color: #fff;
  text-align: center;
}

.queue .queue_single{
  font-size: 48rpx;
  line-height: 67rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

.queue .main_info .title{
  font-size: 56rpx;
  line-height: 78rpx;
  text-align: center;
  margin-bottom: 8rpx;
}

.queue .main_info .title.success{
  font-size: 64rpx;
  line-height: 90rpx;
}

.queue .main_info .title.success text{
  font-size: 28rpx;
}

.queue .main_info .subTitle{
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}

.queue .main_info .reset_submit{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  margin-top: 40rpx;
  border-radius: 50rpx;
  border: 1rpx solid #fff;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 2rpx;
  background-color: #09D5CC;
}

.line_dashed{
  width: 100%;
  border-bottom: 1rpx dashed #fff;
  margin: 64rpx 0;
}

.queue .order_info .flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.queue .order_info .flex:last-of-type{
  margin-bottom: 0;
}

.queue .order_info .flex .o_label, .queue .order_info .flex .o_value{
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: left;
}

.queue .order_info .flex .o_value{
  text-align: right;
}

.perfect .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
}

.queue .order_btn button{
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #09D5CC;
  border-radius: 56rpx;
  background-color: #fff;
  margin-top: 64rpx;
}

.perfect .order_btn button{
  margin-top: 20rpx;
}

.mask{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 1;
}

.popup{
  position: fixed;
  left: 50%;
  top: 50%;
  width: 550rpx;
  height: 300rpx;
  padding-top: 10rpx;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 3;
  box-sizing: border-box;
}

.popup .input_row{
  width: 420rpx;
  margin: 20rpx auto;
}

.popup .input_row input{
  width: 420rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 78rpx;
  border: 1rpx solid #F5F5F5;
  border-radius: 40rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.popup .tips{
  width: 420rpx;
  font-size: 28rpx;
  line-height: 42rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  margin: 0 auto 20rpx;
  color: #999;
}

.popup button{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  border: 0;
  background-color: #23C2F7;
  border-radius: 40rpx;
}