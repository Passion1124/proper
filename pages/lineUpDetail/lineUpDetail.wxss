image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.header .text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #b7b7b7;
}

.header .active {
  color: #23c2f7;
  /* font-weight: bold; */
}

.header .arrow {
  width: 40rpx;
  height: 9rpx;
  margin: 0 47rpx;
}

.queue{
  width: 670rpx;
  padding: 40rpx;
  color: #fff;
  background-color: #09D5CC; 
  border-radius: 10rpx;
  margin: 40rpx auto 0;
  box-sizing: border-box;
}

.queue .queue_single{
  font-size: 48rpx;
  line-height: 67rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

.queue .main_info .title{
  font-size: 56rpx;
  line-height: 78rpx;
  text-align: center;
  margin-bottom: 8rpx;
}

.queue .main_info .title.success{
  font-size: 64rpx;
  line-height: 90rpx;
}

.queue .main_info .title.success text{
  font-size: 28rpx;
}

.queue .main_info .subTitle{
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}

.queue .main_info .reset_submit{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  margin-top: 40rpx;
  border-radius: 50rpx;
  border: 1rpx solid #fff;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 2rpx;
  background-color: #09D5CC;
}

.line_dashed{
  width: 100%;
  border-bottom: 1rpx dashed #fff;
  margin: 64rpx 0;
}

.queue .order_info .flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.queue .order_info .flex:last-of-type{
  margin-bottom: 0;
}

.queue .order_info .flex .o_label, .queue .order_info .flex .o_value{
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: left;
}

.queue .order_info .flex .o_value{
  text-align: right;
}

.queue .order_btn button{
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #09D5CC;
  border-radius: 56rpx;
  background-color: #fff;
  margin-top: 64rpx;
}