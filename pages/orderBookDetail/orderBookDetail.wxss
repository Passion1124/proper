image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.container{
  padding: 0 40rpx;
}

.flex{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.t_right{
  text-align: right !important;
}

.orange{
  color: #F97572 !important;
}

.result{
  margin: 64rpx 0;
}

.result .title{
  display: flex;
  align-items: center;
  justify-content: center;
}

.result .title .icon{
  width: 52rpx;
  height: 52rpx;
  margin-right: 14rpx;
}

.result .title .text{
  font-size: 56rpx;
  line-height: 78rpx;
  color: #23C2F7;
}

.result .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  text-align: center;
  margin-top: 24rpx;
}

.result .reset_btn button{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 50rpx;
  background-color: #fff;
  margin-top: 60rpx;
}

.tips{
  padding: 40rpx;
  border-radius: 16rpx;
  background-color: #F2F5F7;
  margin: 40rpx 0;
  text-align: center;
}

.tips button{
  width: 480rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  box-sizing: border-box;
}

.tips .comment_row{
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tips .comment_row button{
  width: 240rpx;
  height: 64rpx;
  line-height: 62rpx;
  font-size: 28rpx;
  color: #3C3C3C;
  letter-spacing: 2rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 50rpx;
  background-color: transparent;
}

.tips .title{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #3C3C3C;
}

.finished .shopping, .pending .cancel_order {
  line-height: 78rpx;
  background-color: transparent;
  color: #3C3C3C;
  border: 1rpx solid #B7B7B7;
}

.overtime .shopping, .refund .shopping, .pending .pay{
  line-height: 80rpx;
  border: 0;
  color: #fff;
  background-color: #F97572;
  box-shadow:0px 10rpx 22rpx 0px rgba(164,178,190,0.39);
}

.refund .title{
  color: #F97572;
}

.refund .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  margin-top: 8rpx;
  color: #3C3C3C;
} 

.pending .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #3C3C3C;
  margin-top: 8rpx;
}

.pending .subTitle text{
  color: #23C2F7;
}

.page_title{
  font-size: 48rpx;
  line-height: 67rpx;
  color: #3C3C3C;
  text-align: center;
  margin: 72rpx 0 15rpx;
  font-weight: bold;
}

.row .area{
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  text-align: left;
}

.row .area:last-of-type{
  border-bottom: 0;
}

.row .area .area_title{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3C3C3C;
  letter-spacing: 1rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}

.row .area .text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.row .area .text:last-of-type{
  margin-bottom: 0;
}

.row .area .text.flex view:last-of-type{
  flex: 1;
}