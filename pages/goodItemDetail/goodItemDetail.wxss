.container{
  padding: 0 40rpx 172rpx;
  box-sizing: border-box;
}

.page_title{
  font-size: 56rpx;
  line-height: 78rpx;
  color: #3C3C3C;
  font-weight: bold;
  padding-top: 24rpx;
  margin-bottom: 90rpx;
}

.card_row{
  /* padding-bottom: 80rpx;
  border-bottom: 1rpx solid #E0E0E0; */
}

.good_item_card{
  width: 100%;
  border-radius: 16rpx;
  background-color: #F2F5F7;
  padding: 40rpx 40rpx 24rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.good_item_card .title{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #484848;
  margin-bottom: 8rpx;
}

.good_item_card .subTitle{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.good_item_card .price{
  color: #F97572;
  line-height: 45rpx;
}

.good_item_card .price>text:first-of-type{
  font-size: 32rpx;
}

.good_item_card .price>text:last-of-type{
  font-size: 48rpx;
}

.single{
  width: 100%;
  padding: 40rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E0E0E0;
}

.single .s_title{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.single .tips{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
}

.introduce{
  padding-top: 44rpx;
}

.introduce .i_title{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  margin-bottom: 24rpx;
}

.introduce .i_content .wxParse-p .WxEmojiView{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-bottom: 40rpx;
}

.introduce .i_content .wxParse-p:last-of-type .WxEmojiView{
  margin-bottom: 0;
}

.introduce .i_content .wxParse-p image{
  max-width: 100% !important;
  vertical-align: top;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.introduce .i_content rich-text{
  width: 100%;
  height: 100%;
}

.subscribe{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 40rpx;
  background-color: #FFFFFF;
  box-shadow:0px -3px 14px 0px rgba(0,0,0,0.1);
  box-sizing: border-box;
}

.subscribe .price{
  display: flex;
  align-items: center;
}

.subscribe .price text:first-of-type{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin-right: 8rpx;
}

.subscribe .price text:last-of-type{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #F97572;
}

.subscribe .btn button{
  width: 370rpx;
  height: 80rpx;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  color: #fff;
  border-radius: 40rpx;
  background-color: #F97572;
}

.main_row{
  margin-top: 40rpx;
}

.main_row .main {
  position: relative;
  width: 684rpx;
  height: 238rpx;
  margin: 0 auto 25rpx;
}

.main_row .main:last-of-type {
  margin-bottom: 0;
}

.main_row .main .bg {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.main_row .main .content {
  position: absolute;
  left: 7rpx;
  top: 7rpx;
  width: 670rpx;
  height: 224rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.main_row .main .content .top {
  display: flex;
  justify-content: space-between;
}

.main_row .main .content .top .logo {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  overflow: hidden;
}

.main_row .main .content .top .logo image {
  width: 100%;
  height: 100%;
}

.main_row .main .content .top .worth {
  text-align: right;
}

.main_row .main .content .top .worth .discount {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  color: #3c3c3c;
}

.main_row .main .content .top .worth .discount .num {
  font-size: 62rpx;
  line-height: 59rpx;
  font-weight: normal;
  margin-right: 10rpx;
}

.main_row .main .content .top .worth .discount .num .currency {
  font-size: 24rpx;
  line-height: 33rpx;
}

.main_row .main .content .top .worth .discount .fracture {
  position: relative;
  font-size: 24rpx;
  top: -4rpx;
}

.main_row .main .content .top .worth .expiry_date {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #3c3c3c;
}

.main_row .main .content .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 51rpx;
}

.main_row .main .content .bottom view:first-of-type {
  max-width: 377rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.main_row .main .content .bottom view:last-of-type{
  font-size: 0;
}

.main_row .main .content .bottom view:last-of-type button {
  width: 154rpx;
  height: 48rpx;
  line-height: 46rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  border: 1rpx solid #23c2f7;
  background-color: #fff;
  color: #23c2f7;
  border-radius: 48rpx;
  padding: 0;
}

.main_row .main .content .bottom view:last-of-type .hasExists{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
}
