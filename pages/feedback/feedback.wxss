.container{
  padding: 0 40rpx;
}

.title{
  font-size: 56rpx;
  line-height: 78rpx;
  color: #3C3C3C;
  font-weight: bold;
  margin: 24rpx 0 30rpx;
}

.text{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3C3C3C;
  margin: 40rpx 0;
}

.textarea textarea{
  width: 100%;
  height: 400rpx;
  padding: 32rpx 40rpx;
  font-size: 33rpx;
  color: #3C3C3C;
  background-color: #F2F5F7;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.textarea textarea::-webkit-input-placeholder{
  color: #8C8C8C;
}

.phone input{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
  margin-bottom: 80rpx;
}

.phone input::-webkit-input-placeholder{
  color: #B7B7B7;
}

.button button{
  width: 560rpx;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 56rpx;
}

.button button.allow{
  background:linear-gradient(270deg,rgba(36,225,226,1) 0%,rgba(35,194,247,1) 100%);
  box-shadow:0px 8px 24px 0px rgba(181,239,242,1);
  color: #fff;
}

.button button.disabled{
  background-color: #E0E0E0;
  color: #fff;
}