image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.header .text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #b7b7b7;
}

.header .active {
  color: #23c2f7;
  /* font-weight: bold; */
}

.header .arrow {
  width: 40rpx;
  height: 9rpx;
  margin: 0 47rpx;
}

.book_form {
  width: 100%;
  padding: 0 40rpx 0;
  box-sizing: border-box;
}

.book_form .form_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 64rpx 0 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.book_form .no_border {
  border: 0 !important;
}

.book_form .form_title .title_text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3c3c3c;
}

.book_form .single {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.book_form .single .single_text, .book_form .single .single_left {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #3c3c3c;
}

.sure_submit_btn{
  margin: 80rpx 0;
}

.sure_submit_btn button {
  width: 560rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(270deg, rgba(36, 225, 226, 1) 0%, rgba(35, 194, 247, 1) 100%);
  box-shadow: 0px 8rpx 24rpx 0px rgba(181, 239, 242, 1);
  border-radius: 56rpx;
}