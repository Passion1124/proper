.container{
  padding: 0 40rpx;
}

.detail_hd{
  margin: 80rpx 0 64rpx;
  text-align: center;
}

.detail_hd .price{
  font-size: 72rpx;
  color: #F97572;
}

.detail_hd .date, .panel .panel_hd{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #8C8C8C;
}

.panel{
  margin-bottom: 80rpx;
}

.panel .panel_hd{
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.panel .panel_bd .food{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.panel .panel_bd .food .food_l{
  flex: 1;
  display: flex;
  align-items: center;
}

.panel .panel_bd .food .food_l .food_name{
  width: 312rpx;
  word-wrap: break-word;
}

.panel .panel_bd .food .food_l .food_name, .panel .panel_bd .food .food_l .food_num{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #3C3C3C;
}

.panel .panel_bd .food .food_price{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #F97572;
}

.panel .panel_bd.mt_22{
  margin-top: 22rpx;
}

.panel .panel_bd .panel_info{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #3C3C3C;
  word-break: break-all;
}

.update_order{
  margin-bottom: 128rpx;
}

.update_order button{
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 56rpx;
  background:linear-gradient(270deg,rgba(36,225,226,1) 0%,rgba(35,194,247,1) 100%);
  box-shadow:0px 8rpx 24rpx 0px rgba(181,239,242,1);
}